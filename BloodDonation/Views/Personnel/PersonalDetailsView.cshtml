@model BloodDonation.Models.Personnel

@{
    ViewBag.Title = "PersonalDetailsView";
}

<html lang="en" dir="ltr">
<head>
    <title>Account settings</title>
    <meta charset="iso-8859-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Styles/layout_personel_add_blood.css")
    @Styles.Render("~/Styles/mediaqueries.css")
    <script src="@Url.Content(" ~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>

    <script src="@Url.Content(" ~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="wrapper row1">
        <header id="header" class="clear">
            <div id="hgroup">
                <h1><a href="#">Personal details</a></h1>
                <h2><a href="#">Donation center personnel</a></h2>
            </div>
            @Html.Partial("NavigationBannerView", null)
        </header>
    </div>

    <div class="wrapper row3">
        <div class="container">
            @using (Html.BeginForm("UpdatePersonnel", "Personnel", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                @Html.Hidden("ID", Model.ID);

                <div class="row">
                    <div class="col-25">
                        <label for="1">First Name</label>
                    </div>
                    <div class="col-75">
                        @Html.TextBoxFor(model => model.firstName, new { placeholder = Model.firstName })
                    </div>
                </div>


                <div class="row">
                    <div class="col-25">
                        <label for="2">Last Name</label>
                    </div>
                    <div class="col-75">
                        @Html.TextBoxFor(model => model.lastName, new { placeholder = Model.lastName })
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label for="3">Email address</label>
                    </div>
                    <div class="col-75">
                        @Html.TextBoxFor(model => model.emailAddress, new { placeholder = Model.emailAddress })
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label>Date of Birth</label>
                    </div>
                    <div class="col-75">
                        @Html.TextBoxFor(model => model.DOB, new {  @Value = Model.DOB.ToShortDateString()})
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label for="6">Country</label>
                    </div>
                    <div class="col-75">
                        @Html.TextBoxFor(model => model.Country, new {placeholder = Model.Country })
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label for="7">City</label>
                    </div>
                    <div class="col-75">
                        @Html.TextBoxFor(model => model.CityTown, new { placeholder = Model.CityTown })
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label for="5">Address</label>
                    </div>
                    <div class="col-75">
                        @Html.TextBoxFor(model => model.Address, new { placeholder = Model.Address })
                    </div>
                </div>

                <div class="row">
                    <input type="submit" value="Confirm changes">
                </div>
            }
        </div>
    </div>

    <!-- Footer -->
    <div class="wrapper row4">
        <footer id="footer" class="clear">
            <p class="fl_left">Copyright &copy; 2013 - All Rights Reserved - <a href="#">Domain Name</a></p>
        </footer>
    </div>
</body>
</html>

