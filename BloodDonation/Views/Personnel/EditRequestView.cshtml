@model BloodDonation.Models.NewStatus

@{
    ViewBag.Title = "EditRequestView";
}

<html lang="en" dir="ltr">
<head>
    <title>Edit request</title>
    <meta charset="iso-8859-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Styles/layout_personel_add_blood.css")
    @Styles.Render("~/Styles/mediaqueries.css")
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="wrapper row1">
        <header id="header" class="clear">
            <div id="hgroup">
                <h1><a href="#">Separate components</a></h1>
                <h2><a href="#">Donation center personnel</a></h2>
            </div>
            @Html.Partial("NavigationBannerView", null)
        </header>
    </div>
    <div class="wrapper row3">
        <div class="container">
            @using (Html.BeginForm("RequestToDB", "Personnel", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
            <div class="row">
                <div class="col-25">
                    <label for="fname">Request ID</label>
                </div>

                <div class="col-75">
                    @Html.TextBoxFor(model => model.ID, new {  placeholder = Model.ID, @readonly ="readonly" })
                </div>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname" style="display:inline;">New status</label>
                </div>
                @{
                List<SelectListItem> listItems= new List<SelectListItem>();
                        listItems.Add(new SelectListItem
                        {
                            Text = "On the way",
                            Value = "OnTheWay"
                        });
                        listItems.Add(new SelectListItem
                        {
                            Text = "Denied",
                            Value = "Denied"
                        });
                        listItems.Add(new SelectListItem
                        {
                            Text = "Completed",
                            Value = "Completed"
                        });
                
                    }
                    <div class="col-75">
                        @Html.DropDownListFor(model => model.status, listItems)
                    </div>
                </div>

            <div class="row">
                <input type="submit" value="Confirm edit">
            </div>
            }

        </div>
    </div>
    <!-- Footer -->
    <div class="wrapper row4">
        <footer id="footer" class="clear">
            <p class="fl_left">Copyright &copy; 2013 - All Rights Reserved - <a href="#">Domain Name</a></p>
        </footer>
    </div>
</body>
</html>



