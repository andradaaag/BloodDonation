@model  BloodDonation.Models.TransferObjectForAcceptView

@{
    ViewBag.Title = "AcceptRequestView";
}

<html lang="en" dir="ltr">
<head>
    <title>Accept request</title>
    <meta charset="iso-8859-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Styles/layout_personel_add_blood.css")
    @Styles.Render("~/Styles/mediaqueries.css")
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>


    


    <div class="wrapper row1">
        <header id="header" class="clear">
            <div id="hgroup">
                <h1><a href="#">Separate components</a></h1>
                <h2><a href="#">Donation center personnel</a></h2>
            </div>
            @Html.Partial("NavigationBannerView", null)
        </header>
    </div>


    <div class="wrapper row3">
        <div class="container">
            <h1> Do you wish to accept the following blood request? </h1>
            
            <div>
                <table style="width:100%">
                    <tr>
                        <th>ID</th>
                        <th>Quantity</th>
                        <th>BloodType</th>
                    </tr>
                    @foreach (var req in Model.usedBlood)
                     {
                       
                     <tr>
                    <td>@req.ID</td>
                    <td>@req.Amount</td>
                    <td>Component : @req.Component <br> Blood Group : @req.BloodType.Group <br> Blood RH: @req.BloodType.RH  </td>
                    <td>
                        <div class="row">
                            <input type="submit" value="Edit">
                        </div>
                    </td>
                </tr>
}
}

                </table>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname">ID</label>

                </div>
                <div class="col-75">
                    @Html.EditorFor(model => model.bloodRequest.ID, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname">Status</label>

                </div>
                <div class="col-75">
                    @Html.EditorFor(model => model.bloodRequest.status, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname">Component</label>

                </div>
                <div class="col-75">
                    @Html.EditorFor(model => model.bloodRequest.bloodType.component, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname">Hospital name</label>

                </div>
                <div class="col-75">
                    @Html.EditorFor(model => model.bloodRequest.hospitalName, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname">Hospital location</label>

                </div>
                <div class="col-75">
                    @Html.EditorFor(model => model.bloodRequest.hospitalLocation, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname">Doctor name</label>

                </div>
                <div class="col-75">
                    @Html.EditorFor(model => model.bloodRequest.doctorName, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname">Doctor email</label>

                </div>
                <div class="col-75">
                    @Html.EditorFor(model => model.bloodRequest.doctorEmail, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname">Quantity</label>

                </div>
                <div class="col-75">
                    @Html.EditorFor(model => model.bloodRequest.quantityString, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname">Blood group type</label>

                </div>
                <div class="col-75">
                    @Html.EditorFor(model => model.bloodRequest.bloodType.Group, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>
            </div>

            <div class="row">
                <div class="col-25">
                    <label for="fname">Blood RH</label>

                </div>

                <div class="col-75">
                    @if(Model.bloodRequest.bloodType.PH){
                        <input type="text" id="Foo" name="pos" value="Positive" readonly="readonly"/>
                    }
                    else{
                    <input type="text" id="Foo" name="neg" value="Negative" readonly="readonly" />
                    }
                </div>
            </div>
            <br />
            <br />
            <div class="row">
                <center>
                    @{
                        var reqID = Model;
                    }
                    @Html.ActionLink("Confirm", "ConfirmAcceptRequest", "Personnel", new { id = Model.bloodRequest.ID },null)
                </center>
            </div>

        </div>
    </div>
    <!-- Footer -->
    <div class="wrapper row4">
        <footer id="footer" class="clear">
            <p class="fl_left">Copyright &copy; 2013 - All Rights Reserved - <a href="#">Domain Name</a></p>
        </footer>
    </div>
</body>
</html>



