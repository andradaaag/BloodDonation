@model BloodDonation.Models.Patient

@{
    ViewBag.Title = "PatientDonationsView";
}

<html lang="en" dir="ltr">
<head>
    <title>Add Donation - Personnel</title>
    <meta charset="iso-8859-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    @Styles.Render("~/Styles/style.css")
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js">
    </script>
</head>

<body>

    <div id="header">
        <div class="container">
            <div class="row">
                <div id="hgroup" class="col-sm-8 ml-4">
                    <div class="row">
                        <a href="#" id="page-title">Check donations for patient</a>
                    </div>
                    <div class="row">
                        <a href="#" id="page-owner">DOCTOR</a>
                    </div>
                </div>
                <form action="login.html" method="post" class="col-sm-1 offset-sm-2">
                    @Html.ActionLink("Log Out", "LogOut", "Login", null, new { @class = "btn auth-button" })
                </form>
            </div>
            <nav class="navbar navbar-expand-sm">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("SHOW BLOOD REQUESTS", "MainDoctorPage", "Doctor", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item current">
                        <a href="#" class="nav-link">SEE DONATIONS FOR PATIENT</a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("MAKE BLOOD REQUEST", "GetMakeBloodRequest", "Doctor", null, new { @class = "nav-link" })
                    </li>


                </ul>
            </nav>
        </div>
    </div>

    <div class="container">
        <div class="card">
            <div class="card-header">
                Add Donation:
            </div>
            <div class="card-body">
                @using (Html.BeginForm("GetPatientDonations", "Doctor", FormMethod.Post))
                {

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Patient CNP </label>
                            </div>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.CNP, new { placeholder = "CNP", @class = "form-control" })
                            </div>
                        </div>
                    </div>


                    <input type="submit" value="Check donations" class="btn btn-success">
                }
            </div>
            </div>
            @if (Model != null)
            {
                <div class="card">
                    <div class="card-body">

                        <div class="form-group">
                            <div class="row">

                                <h4 class="ml-5">Number of blood bags donated for patient: @Model.NoDon </h4>

                            </div>
                        </div>
                    </div>


                </div>
            }

        <div class="footer fixed-bottom text-center">
            © 2018 Copyright: Vitamine
        </div>

</body>
