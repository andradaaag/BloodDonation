@model BloodDonation.Models.ShowDonorDonations

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <title>Donations - Donor</title>
    <meta charset="iso-8859-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    @Styles.Render("~/Styles/style.css")
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
</head>
<body>
<div id="header">
    <div class="container">
        <div class="row">
            <div id="hgroup" class="col-sm-8 ml-4">
                <div class="row">
                    <a href="#" id="page-title">My Donations</a>
                </div>
                <div class="row">
                    <a href="#" id="page-owner">DONOR</a>
                </div>
            </div>
            <form action="login.html" method="post" class="col-sm-1 offset-sm-2">
                @Html.ActionLink("Log Out", "LogOut", "Login", null, new {@class = "btn auth-button"})
            </form>
        </div>
        <nav class="navbar navbar-expand-sm">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("PERSONAL DETAILS", "DonorPersonalDetailsView", "Donor", null, new {@class = "nav-link"})
                </li>

                <li class="nav-item current">
                    <a href="#" class="nav-link">MY DONATIONS</a>
                </li>

                <li class="nav-item">
                    @Html.ActionLink("BOOK DONATION", "BookDonationView", "Donor", null, new {@class = "nav-link"})
                </li>

                <li class="nav-item">
                    @Html.ActionLink("BOOKED DATES", "ShowBookedDatesDonorPage", "Donor", null, new {@class = "nav-link"})
                </li>
            </ul>
        </nav>

    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-header">
            Donations
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Center Location</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Is Accepted</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var req in Model.GetDonorDonationDetails())
                {
                    <tr>
                        <td>@req.DonationDate</td>
                        <td>@req.CenterLocation</td>
                        <td>@req.Quantity</td>
                        <td>@req.TestResult</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="footer fixed-bottom text-center">
    © 2018 Copyright: Vitamine
</div>

</body>
</html>