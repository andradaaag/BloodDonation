@model BloodDonation.Models.DonorAccountRequest

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <title>Personal Details - Donor</title>
    <meta charset="iso-8859-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    @Styles.Render("~/Styles/style.css")
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
</head>
<body>
<div id="header">
    <div class="container">
        <div class="row">
            <div id="hgroup" class="col-sm-8 ml-4">
                <div class="row">
                    <a href="#" id="page-title">Personal Details</a>
                </div>
                <div class="row">
                    <a href="#" id="page-owner">DONOR</a>
                </div>
            </div>
            <form action="login.html" method="post" class="col-sm-1 offset-sm-2">
                @Html.ActionLink("Log Out", "LogOut", "Login", null, new {@class = "btn auth-button"})
            </form>
        </div>
        <nav class="navbar navbar-expand-sm">
            <ul class="navbar-nav">
                <li class="nav-item current">
                    <a href="#" class="nav-link">PERSONAL DETAILS</a>
                </li>

                <li class="nav-item">
                    @Html.ActionLink("MY DONATIONS", "Index", "Donor", null, new {@class = "nav-link"})
                </li>

                <li class="nav-item">
                    @Html.ActionLink("BOOK DONATION", "BookDonationView", "Donor", null, new {@class = "nav-link"})
                </li>

                <li class="nav-item">
                    @Html.ActionLink("BOOKED DATES", "ShowBookedDatesDonorPage", "Donor", null, new {@class = "nav-link"})
                </li>
            </ul>
        </nav>

    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-header">
            Personal details:
        </div>
        <div class="card-body">
            <form action="#">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>First Name</label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly="readonly" value=@Model.FirstName class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Last Name</label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly="readonly" value=@Model.LastName class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Date of birth</label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly="readonly" value=@Model.DateOfBirth class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Email</label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly="readonly" value=@Model.Email class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Address</label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly="readonly" value=@Model.Address class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Country</label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly="readonly" value=@Model.Country class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Residence</label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly="readonly" value=@Model.Residence class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>City Town</label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly="readonly" value=@Model.CityTown class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>CNP</label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly="readonly" value=@Model.Cnp class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Additional Commentaries</label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" readonly="readonly" value=@Model.Commentaries class="form-control">
                        </div>
                    </div>
                </div>

                @Html.ActionLink("Edit", "GetEditDonorPersonalDataPage", "Donor", null, new {@class = "btn btn-success"})
            </form>

        </div>
    </div>
</div>


<div class="footer fixed-bottom text-center">
    © 2018 Copyright: Vitamine
</div>

</body>
</html>