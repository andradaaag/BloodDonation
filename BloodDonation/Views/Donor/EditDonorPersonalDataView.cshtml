@model BloodDonation.Models.DonorAccountRequest

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <title>Edit Personal Details - Donor</title>
    <meta charset="iso-8859-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    @Styles.Render("~/Styles/style.css")
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
</head>
<body>
<div id="header">
    <div class="container">
        <div class="row">
            <div id="hgroup" class="col-sm-8 ml-4">
                <div class="row">
                    <a href="#" id="page-title">Edit Personal Details</a>
                </div>
                <div class="row">
                    <a href="#" id="page-owner">DONOR</a>
                </div>
            </div>
            <form action="login.html" method="post" class="col-sm-1 offset-sm-2">
                @Html.ActionLink("Log Out", "LogOut", "Login", null, new {@class = "btn auth-button"})
            </form>
        </div>
        <nav class="navbar navbar-expand-sm">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("PERSONAL DETAILS", "DonorPersonalDetailsView", "Donor", null, new {@class = "nav-link"})
                </li>

                <li class="nav-item">
                    @Html.ActionLink("MY DONATIONS", "Index", "Donor", null, new {@class = "nav-link"})
                </li>

                <li class="nav-item">
                    @Html.ActionLink("BOOK DONATION", "BookDonationView", "Donor", null, new {@class = "nav-link"})
                </li>

                <li class="nav-item">
                    @Html.ActionLink("BOOKED DATES", "ShowBookedDatesDonorPage", "Donor", null, new {@class = "nav-link"})
                </li>
            </ul>
        </nav>

    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-header">
            Edit Personal details:
        </div>
        <div class="card-body">

            @using (Html.BeginForm("UpdateDonorPersonalData", "Donor", FormMethod.Post))
            {
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>First Name</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.FirstName, new { placeholder = Model.FirstName,@required = "required", @class="form-control"})
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label >Last Name</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.LastName, new { placeholder = Model.LastName, @required = "required", @class="form-control"})
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Date of birth</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.DateOfBirth, new { @type = "date", @class = "form-control", @Value = @DateTime.Today.ToString("yyyy-MM-dd") })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Email</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Email, new { placeholder = Model.Email, @required = "required", @class="form-control"})
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Address</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Address, new { placeholder = Model.Address,  @required = "required", @class="form-control"})
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Country</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Country, new { placeholder = Model.Country, @required = "required", @class="form-control"})
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label>City Town</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.CityTown, new { placeholder = Model.CityTown,  @required = "required", @class="form-control"})
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label >CNP</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Cnp, new { placeholder = Model.Cnp, @required = "required", @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label >Additional Commentaries</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Commentaries, new { placeholder = Model.Commentaries, @class="form-control"})
                        </div>
                    </div>
                </div>

                <input type="submit" value="Save" class="btn btn-success">
            }

        </div>
    </div>
</div>

<div class="footer fixed-bottom text-center">
    © 2018 Copyright: Vitamine
</div>

</body>
</html>