@model BloodDonation.Models.DonorAccountRequest

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <title>Personal Data</title>
    <meta charset="iso-8859-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Styles/layout_admin_requests.css")
    @Styles.Render("~/Styles/mediaqueries.css")
    <script src="scripts/jquery.1.9.0.min.js"></script>
    <script src="scripts/jquery-mobilemenu.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function() {
            $("#datepicker").datepicker();
        });
    </script>

</head>
<body>

<div class="wrapper row1">
    <header id="header" class="clear">
        <div id="hgroup">
            <h1>
                <a href="#">Personal Data</a>
            </h1>
            <h2>
                <a href="#">Donor</a>
            </h2>
        </div>
        <form action="login.html" method="post">
            <input type="submit" class="sf_submit" value="Log out">
        </form>
        <nav>
            <ul>
                <li>@Html.ActionLink("Personal Details", "DonorPersonalDetailsView", "Donor", null, new {@class = "header nav li"})</li>
                <li>@Html.ActionLink("My Donations", "DonorPersonalDetailsView", "Donor", null, new {@class = "header nav li"})</li>
                <li>@Html.ActionLink("Book Donation", "Index", "Donor", null, new {@class = "header nav li"})</li>
                <li>@Html.ActionLink("Account Settings", "DonorPersonalDetailsView", "Donor", null, new {@class = "header nav li"})</li>
            </ul>
        </nav>
    </header>
</div>
<!-- content -->

<div class="wrapper row3">
    <div class="container">
        <form action="#">
            <p>Book a donation: <input type="text" id="datepicker"></p>
            <div class="row">
                @Html.ActionLink("Select date", "GetEditDonorPersonalDataPage", "Donor", null, new {@class = "button"})
            </div>
        </form>

    </div>
</div>
<!-- Footer -->
<div class="wrapper row4">
    <footer id="footer" class="clear">
        <p class="fl_left">Copyright &copy; 2013 - All Rights Reserved - <a href="#">Domain Name</a></p>
    </footer>
</div>
</body>
</html>